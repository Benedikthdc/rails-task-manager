
<h1>Tasks</h1>
<ul class="task_list">
<% @tasks.each do |task| %>

<li class="task">
<% if task.completed == true %>
<i style="color:yellow"class="fa-solid fa-square-check"></i>
<%else %>
<i style="color:yellow" class="fa-solid fa-square"></i>
<% end %>
<p class="title"><%=link_to task.title, task_path(task.id)%></p>
<p class="delete-button">
  <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa-solid fa-trash-can"></i>
    <% end %>

</p>
<% end %>
</ul>

<%= link_to 'create new task', new_task_path %>

